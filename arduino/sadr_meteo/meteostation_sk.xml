<INDIDriver>

<defSwitchVector device="Arduino MeteoStation" name="CONNECTION" label="Connection" group="Connection" state="Idle" perm="rw" rule="OneOfMany" timeout="60">
    <defSwitch name="CONNECT" label="Connect">
Off
    </defSwitch>
    <defSwitch name="DISCONNECT" label="Disconnect">
On
    </defSwitch>
</defSwitchVector>

<defTextVector device="Arduino MeteoStation" name="DEVICE_PORT" label="SERIAL" group="Connection" state="Idle" perm="rw" timeout="60">
    <defText name="PORT" label="Port">
/dev/ttyACM0
    </defText>
</defTextVector>

<!-- METEO TAB -->
<defNumberVector device="Arduino MeteoStation" name="Meteo" label="Meteo" group="Meteo" state="Idle" perm="ro" timeout="60">
<defNumber name="Irradiance" label="mV" format="%5.0f" min="0" max="5000" step="1">
    <indiduino pin="14" type="input" mul="4.88" add="0"/>
0
    </defNumber>
</defNumberVector>

<defLightVector device="Arduino INPUTS" name="STATUS" label="Status" group="Meteo" state="Idle" perm="ro" rule="AnyOfMany" timeout="60">
    <defLight name="daylight" label="Daylight">
	<indiduino pin="8"/>
	Off
    </defLight>
</defLightVector>

<!-- RAW SENSORS TAB -->
<defNumberVector device="Arduino MeteoStation" name="LIGHT" label="Irradiance" group="Raw Sensors" state="Idle" perm="ro" timeout="60">
    <defNumber name="LIGHT" label="LIGHT" format="%5.0f" min="0" max="1024" step="1">
    <indiduino pin="14" type="input" mul="1" add="0"/>
0
    </defNumber>
</defNumberVector>


</INDIDriver>
