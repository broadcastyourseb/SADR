<INDIDriver>

<defSwitchVector device="Arduino MeteoStation" name="CONNECTION" label="Connection" group="Connection" state="Idle" perm="rw" rule="OneOfMany" timeout="60">
    <defSwitch name="CONNECT" label="Connect">
Off
    </defSwitch>
    <defSwitch name="DISCONNECT" label="Disconnect">
On
    </defSwitch>
</defSwitchVector>

<defTextVector device="Arduino MeteoStation" name="DEVICE_PORT" label="SERIAL" group="Connection" state="Idle" perm="rw" timeout="60">
    <defText name="PORT" label="Port">
/dev/ttyACM0
    </defText>
</defTextVector>

<defNumberVector device="Arduino MeteoStation" name="Meteo" label="Meteo" group="Meteo" state="Idle" perm="ro" timeout="60">
    <defNumber name="Irradiance" label="mV" format="%5.0f" min="0" max="5000" step="1">
    <indiduino pin="14" type="input" mul="4.88" add="0"/>
    0
    </defNumber>
</defNumberVector>

<defLightVector device="Arduino INPUTS" name="STATUS" label="Status" group="Meteo" state="Idle" perm="ro" rule="AnyOfMany" timeout="60">
    <defLight name="clouds" label="Cloudy">
	<indiduino pin="5"/>
	Off
    </defLight>
    <defLight name="dewing" label="Dewing">
	<indiduino pin="6"/>
	Off
    </defLight>
    <defLight name="frezzing" label="Frezzing">
	<indiduino pin="7"/>
	Off
    </defLight>
    <defLight name="daylight" label="Daylight">
	<indiduino pin="8"/>
	Off
    </defLight>
        <defLight name="windy" label="Windy">
	<indiduino pin="9"/>
	Off
    </defLight>
        <defLight name="rainy" label="Rainy">
	<indiduino pin="10"/>
	Off
    </defLight>
</defLightVector>

<defNumberVector device="Arduino MeteoStation" name="LIGHT" label="Light" group="Raw Sensors" state="Idle" perm="ro" timeout="60">
    <defNumber name="LIGHT" label="unit" format="%5.0f" min="0" max="1024" step="1">
    <indiduino pin="14" type="input" mul="1" add="0"/>
    0
    </defNumber>
</defNumberVector>
<defNumberVector device="Arduino MeteoStation" name="TEMPERATURE" label="Temperature" group="Raw Sensors" state="Idle" perm="ro" timeout="60">
    <defNumber name="TEMPERATURE" label="Celsius" format="%5.1f" min="0" max="1024" step="1">
    <indiduino pin="15" type="input" mul="1" add="0"/>
    0
    </defNumber>
</defNumberVector>
<defNumberVector device="Arduino MeteoStation" name="PRESSURE" label="Pressure" group="Raw Sensors" state="Idle" perm="ro" timeout="60">
    <defNumber name="PRESSURE" label="hPA" format="%5.1f" min="0" max="1024" step="1">
    <indiduino pin="17" type="input" mul="1" add="0"/>
    0
    </defNumber>
</defNumberVector>
<defNumberVector device="Arduino MeteoStation" name="HUMIDITY" label="Humidity" group="Raw Sensors" state="Idle" perm="ro" timeout="60">
    <defNumber name="HUMIDITY" label="%HR" format="%5.1f" min="0" max="1024" step="1">
    <indiduino pin="18" type="input" mul="1" add="0"/>
    0
    </defNumber>
</defNumberVector>
<defNumberVector device="Arduino MeteoStation" name="SkyT" label="SkyT" group="Raw Sensors" state="Idle" perm="ro" timeout="60">
    <defNumber name="SkyT" label="Celsius" format="%5.1f" min="0" max="1024" step="1">
    <indiduino pin="16" type="input" mul="1" add="0"/>
    0
    </defNumber>
</defNumberVector>
<defNumberVector device="Arduino MeteoStation" name="Dew" label="Dew" group="Raw Sensors" state="Idle" perm="ro" timeout="60">
    <defNumber name="Temperature Dew" label="Celsius" format="%5.1f" min="0" max="1024" step="1">
    <indiduino pin="19" type="input" mul="1" add="0"/>
    0
    </defNumber>
</defNumberVector>
<defNumberVector device="Arduino MeteoStation" name="WIND" label="Windspeed" group="Raw Sensors" state="Idle" perm="ro" timeout="60">
    <defNumber name="WIND" label="Km/h" format="%5.1f" min="0" max="1024" step="1">
    <indiduino pin="20" type="input" mul="1" add="0"/>
    0
    </defNumber>
</defNumberVector>
<defNumberVector device="Arduino MeteoStation" name="CLOUDS" label="Clouds" group="Raw Sensors" state="Idle" perm="ro" timeout="60">
    <defNumber name="CLOUDS" label="%" format="%5.0f" min="0" max="100" step="1">
    <indiduino pin="21" type="input" mul="1" add="0"/>
    0
    </defNumber>
</defNumberVector>
<defNumberVector device="Arduino MeteoStation" name="CAPACITY" label="Capacity" group="Raw Sensors" state="Idle" perm="ro" timeout="60">
    <defNumber name="CAPACITY" label="unit" format="%5.0f" min="0" max="1024" step="1">
    <indiduino pin="22" type="input" mul="1" add="0"/>
    0
    </defNumber>
</defNumberVector>











</INDIDriver>
